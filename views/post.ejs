<%- include('partials/_header'); %>
<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <%- include('partials/_navbar'); %>
  </nav>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post[0].title %></h1>
            <span class="meta">Posted 
              on <%= post[0].date %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%= post[0].detail %></p>
        </div>
        <div class="col-lg-4 col-md-10 mx-auto">
          <div class="row">
            <a href="/post/<%= post[0]._id %>/edit"> <button type='submit' class="btn btn-warning" style="width:100px"> Edit  </button></a>
          </div>
          <div class="row">
            <form method="POST" onsubmit="return confirm('Do you really want to delete the post?');" action="/post/<%= post[0]._id %>/edit?_method=DELETE">
              <button type="submit" class="btn btn-danger" style="width:100px">Delete</button>
            </form>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          
        </div>
      </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer'); %>

  <!-- Bootstrap core JavaScript -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="/js/clean-blog.min.js"></script>

</body>

</html>
